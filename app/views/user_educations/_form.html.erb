<%= form_for [@user, @user_education] do |f| %>
  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label">Degree</label>
    <div class="col-sm-10">
    <%=f.text_field 'degree', class: 'form-control' %>
    </div>
  </div>

  <%=f.file_field :image %>


  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label">University</label>
    <div class="col-sm-10">
    <%=f.text_field 'university_name', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label">Grade</label>
    <div class="col-sm-10">
    <%=f.text_field 'grade', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label">Percentage</label>
    <div class="col-sm-10">
    <%=f.number_field 'percentage', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group"><%= f.submit 'Save', class:"btn btn-primary" %></div>
<% end %>


<style>
input { margin-top: 10px; }
input { margin-bottom: 10px; }

</style>
