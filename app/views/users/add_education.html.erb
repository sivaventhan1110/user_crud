Add <%= @user.firstname%> Education Details


<%= form_tag(save_education_user_path(@user)) do %>
  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label">Degree</label>
    <div class="col-sm-10">
    <%=text_field_tag 'degree',"", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label">University</label>
    <div class="col-sm-10">
    <%=text_field_tag 'university_name',"", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label">Grade</label>
    <div class="col-sm-10">
    <%=text_field_tag 'grade',"", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label for="colFormLabel" class="col-sm-2 col-form-label">Percentage</label>
    <div class="col-sm-10">
    <%=number_field_tag 'percentage',"", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group"><%= submit_tag 'Save', class:"btn btn-primary" %></div>
<% end %>


<style>
input { margin-top: 10px; }
input { margin-bottom: 10px; }

</style>
