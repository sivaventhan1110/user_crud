<h1>All Users</h1>

<%= link_to "New User" , new_user_path%> <br/>  <br/>  <br/> 

<table class="table table-light">
  <tr>
    <th>First Name </th>
    <th>Last Name</th>
    <th>Email</th>
    <th>UserName</th>
    <th>Address</th>
    <th>Phone No</th>
    <th>DOB</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user|%>
    <tr>
    <td><%=user.firstname%></td>
    <td><%=user.lastname%></td>
    <td><%=user.email_id%> </td>
    <td><%=user.username%> </td>
    <td><%=user.address%> </td>
    <td><%=user.contact_no%></td>
    <td><%=user.dob%></td>

    <td> <%= link_to "View", user_path(user) %></td> 
    <td> <%= link_to "Edit", edit_user_path(user) %></td> 
    <td><%= button_to 'Delete',  user_path(user), method: :delete, data: {confirm: "Are you sure?"} %></td>  

  <% end %>
</table>
