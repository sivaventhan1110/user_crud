<h1> <%= @user.firstname%> Details </h1>

<div>First Name : <%=@user.firstname%></div>
<div>Last Name :  <%=@user.lastname%></div>
<div>Email Id : <%=@user.email_id%> </div>
<div>User Name :  <%=@user.username%> </div>
<div>Address :  <%=@user.address%> </div>
<div>Phone No : <%=@user.contact_no%></div>
<div>DOB : <%=@user.dob%></div>
   

<h3> <%= @user.firstname%> Education Details | <%= link_to "Add Education Deatils", add_education_user_path(@user) %></h3>
<%if @user.user_educations.any? %>
  <table>
    <tr>
      <th>Degree </th>
      <th>University</th>
      <th>Grade</th>
      <th>Percentage</th>
      <th>Actions</th>
    </tr>
    <% @user.user_educations.each do |education|%>
      <tr>
      <td><%=education.degree%></td>
      <td><%=education.university_name%></td>
      <td><%=education.grade%> </td>
      <td><%=education.percentage%> </td>
    <% end %>
  </table>
<% else %>
    <div> No Education Details Added.</div>
<% end %>

